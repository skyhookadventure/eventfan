{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eventfan.io/schemas/source/segment/ecommerce/product-shared",
  "title": "Product Shared",
  "description": "Shared a product with one or more friends",
  "type": "object",
  "properties": {
    "share_via": {
      "type": "string",
      "description": "Method of sharing"
    },
    "share_message": {
      "type": "string",
      "description": "Message that the sender sent"
    },
    "recipient": {
      "type": "string",
      "description": "Recipient of the sharing"
    },
    "product_id": {
      "type": "string",
      "description": "Database ID of the product"
    },
    "sku": {
      "type": "string",
      "description": "Sku of the product"
    },
    "category": {
      "type": "string",
      "description": "Product category being viewed"
    },
    "name": {
      "type": "string",
      "description": "Name of the product"
    },
    "brand": {
      "type": "string",
      "description": "Brand of the product"
    },
    "variant": {
      "type": "string",
      "description": "Variant of the product"
    },
    "price": {
      "type": "number",
      "description": "Price of the product"
    },
    "url": {
      "type": "string",
      "description": "URL of the product page for product"
    },
    "image_url": {
      "type": "string",
      "description": "Image url of the product"
    }
  },
  "required": [
    "share_via",
    "product_id",
    "price"
  ]
}